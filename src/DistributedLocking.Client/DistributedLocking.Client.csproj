<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <RootNamespace>Ashutosh.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
    <BaseOutputPath>..\..\Bin\DistributedLocking.Client</BaseOutputPath>
    <OutputPath>..\..\Bin\DistributedLocking.Client\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <Title>Ashutosh's Distributed Locking Client</Title>
    <PackageProjectUrl>https://github.com/AshutoshBhawasinka/Ashutosh.DistributedLocking</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/AshutoshBhawasinka/Ashutosh.DistributedLocking</RepositoryUrl>
    <PackageOutputPath>$(OutputPath)..\</PackageOutputPath>
    <PackageId>Ashutosh.$(AssemblyName)</PackageId>
    <Authors>Ashutosh Bhawasinka</Authors>
    <Product>Ashutosh.$(AssemblyName)</Product>
    <Description>C# Client for the Distributed Locking service</Description>
    <Copyright>Copyright Â© Ashutosh Bhawasinka 2025</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Ashutosh.Common.Logger" Version="4.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

</Project>
